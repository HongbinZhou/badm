<br>
<h1>活动记录</h1>
<table border='3'>
  <thead>
    <tr>
      <th rowspan="2">Date</th>
      <th rowspan="2">Place</th>
      <th rowspan="2">Payer</th>
      <th rowspan="1" colspan=<%= Person.all.length%>>People</th>
      <th rowspan="2">总花费</th>
      <th rowspan="2">人均</th>
      <th rowspan="2" colspan="3"></th>
    </tr>
    <tr>
	<% Person.all.each do |person| %>
	<th scope="col">
	  <%= person.name %>
	</th>
	<% end %>
    </tr>
  </thead>

  <tbody>
    <% Event.all.each do |event| %>
      <tr>
        <td><%= event.date %></td>
        <td><%= event.place %></td>
	<% if payer=Person.find_by(id: event.payer_id) %>
        <td><%= payer.name %></td>
	<% else %>
        <td></td>	
	<% end %>

	<!-- list attendees -->
	<% Person.all.each do |person| %>
	  <% if event.people.exists?(person)%>
	  <td><%= -event.cost_per_person %> </td>
	  <% else %>
          <td></td>
	  <% end %>
	<% end %>

        <td><%= event.cost_total %></td>
        <td><%= event.cost_per_person %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Delete', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <th>余额合计</th>
      <th></th>
      <th></th>
      <% Person.all.each do |person| %>
      <th scope="col">
	<%= person.money %>
      </th>
      <% end %>
      <th></th>
      <th></th>
      <th colspan="3"></th>
    </tr>
   </tfoot>
</table>


