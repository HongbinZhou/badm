<h1>每人花费</h1>

<table border='3'>
  <thead>
    <tr>
      <th>Email</th>
      <th>Name</th>
      <th>Money</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.email %></td>
        <td><%= person.name %></td>
        <td><%= person.money %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<h1>活动记录</h1>
<table border='3'>
  <thead>
    <tr>
      <th rowspan="2">Date</th>
      <th rowspan="2">Place</th>
      <th rowspan="1" colspan=<%= @people.length%>>People</th>
      <th rowspan="2">Cost total</th>
      <th rowspan="2">Cost per person</th>
      <th rowspan="2" colspan="3"></th>
    </tr>
    <tr>
	<% @people.each do |person| %>
	<th scope="col">
	  <%= person.name %>
	</th>
	<% end %>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.date %></td>
        <td><%= event.place %></td>

	<!-- list attendees -->
	<% @people.each do |person| %>
	<td>&bull;</td>
	<% end %>

        <td><%= event.cost_total %></td>
        <td><%= event.cost_per_person %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


