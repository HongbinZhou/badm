
<%= simple_form_for @event do |f| %>
<% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <!-- date -->
  <div class="field">
    <%= f.label :date %><br>
    <%= f.date_select :date %>
  </div>

  <!-- place -->
  <div class="field">
    <%= f.label :place %><br>
    <%= f.text_field :place %>
  </div>

  <!-- cost in total -->
  <div class="field">
    <%= f.label :cost_total %><br>
    <%= f.text_field :cost_total %>
  </div>


  <!-- payer -->
  <div class="field">
    <%= f.label :payer %><br>
    <%= simple_form_for @person do |p| %>
    <%= p.select :email, Person.all.map { |r| [r.name, r.email ] }, include_blank: true %>
    <% end %>
  </div>

  <!-- attendees -->
  <div class="field">
    <%= f.label "参加者:" %><br>
    <% @people.each do |person| %>
      <%= check_box_tag 'attendees[]', person.email %>
      <%= label_tag person.name %>
      <br>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
