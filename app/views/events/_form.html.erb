
<%= simple_form_for @event do |f| %>
<% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <!-- date -->
  <div class="field">
    <%= f.label :date %><br>
    <%= f.date_select :date %>
  </div>

  <!-- place -->
  <div class="field">
    <%= f.label :place %><br>
    <%= f.text_field :place %>
  </div>

  <!-- cost in total -->
  <div class="field">
    <%= f.label :cost_total %><br>
    <%= f.text_field :cost_total %>
  </div>


  <!-- payer -->
  <div class="field">

    <%= f.label "Payer" %>
    <%= f.select(
	:payer_id,
	options_from_collection_for_select(Person.all, "id", "name")
	) %>

  </div>

  <!-- attendees -->
  <div class="field">
    <%= f.label "参加者:" %>
    <table>
      <% @people.each do |person| %>
      <tr>
	<td>
	  <%= check_box_tag 'attendees[]', person.email %>
	  <%= label_tag person.name %>
	</td>
	<td>
	  <%= f.label :", 带朋友人数:" %>
	  <%= text_field_tag "friends[#{person.email}]", "0" %>
	</td>
      </tr>
      <% end %>
    </table>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
